# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Database Configuration
# PostgreSQL (Core Data)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=digital_legacy
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_postgres_password
DATABASE_URL=postgresql://your_postgres_user:your_postgres_password@localhost:5432/digital_legacy

# MongoDB (Document Storage)
MONGODB_URI=mongodb://localhost:27017/digital_legacy_docs
MONGODB_DB_NAME=digital_legacy_docs

# Redis (Caching & Sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_very_long_and_random
JWT_REFRESH_SECRET=your_super_secret_refresh_jwt_key_here_make_it_very_long_and_random
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# Encryption Keys
ENCRYPTION_KEY=your_32_character_encryption_key_here
ENCRYPTION_IV=your_16_character_iv_here

# Biometric Configuration
BIOMETRIC_ENCRYPTION_KEY=your_biometric_encryption_key_here
BIOMETRIC_HASH_ROUNDS=12

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=noreply@digitallegacy.com
FROM_NAME=Digital Legacy Platform

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# AI Assistant Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
CLAUDE_API_KEY=your_claude_api_key_here
AI_PROVIDER=openai

# Cloud Storage Configuration (AWS S3)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=digital-legacy-documents
S3_BUCKET_REGION=us-east-1

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here
CORS_ORIGIN=http://localhost:3000

# Alive Check Configuration
ALIVE_CHECK_INTERVAL_DAYS=30
ALIVE_CHECK_REMINDER_DAYS=7

# File Upload Configuration
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,txt

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log
